load("@rules_pkg//pkg:mappings.bzl", "pkg_filegroup", "pkg_files")

pkg_files(
    name = "content_files",
    srcs = glob([
        "assets/favicon.ico",
        "assets/robots.txt",
        "assets/google*",
        "assets/404",
        "images/*.svg",
        "images/**/*.png",
        "images/**/*.svg",
        "pages/*.html",
    ]),
    strip_prefix = "",
    prefix = "content",
)

pkg_filegroup(
    name = "content",
    srcs = [":content_files"],
    visibility = ["//visibility:public"],
)
